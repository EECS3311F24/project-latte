generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./app.db"
}

model Workout {
    id String @id @default(uuid())
    userId String @unique
    name String
    description String
    // imageUrl String @db.Text
    imageUrl String 
    exercises Exercise[]
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Exercise {
    id String @id  @default(uuid())
    workoutId String
    workout Workout @relation(fields: [workoutId], references: [id])
    name String
    description String
    //imageUrl String @db.Text
    imageUrl String 
    sets Int
    reps Int
    weight Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}